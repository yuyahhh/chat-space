.chat-side
  .chat-side__header
    .chat-side__header__top-items
      .chat-side__header__top-items__name
        = current_user.name
      .chat-side__header__top-items__icons
        =link_to new_group_path, class: "new-group" do
          = icon('fa', 'edit', class: "icon-edit")
        =link_to edit_user_path(current_user), class: "edit--user" do
          = icon('fa', 'cog', class: "icon-cog")
  .chat-side__groups
    - current_user.groups.each do |group|
      .chat-side__groups__group
        = link_to group_messages_path(group) do
          .chat-side__groups__group__name
            = group.name
          .chat-side__groups__group__message
            %p まだメッセージがありません